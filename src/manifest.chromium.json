{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "5.15.5",
  "description": "__MSG_appDesc__",
  "author": "Danny Lin",
  "default_locale": "en",

  "minimum_chrome_version": "88",

  "homepage_url": "https://danny0838.github.io/content-farm-terminator/",

  "incognito": "split",

  "icons": {
    "48": "img/content-farm-marker_48.png"
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "alarms"
  ],

  "optional_permissions": [
    "history"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],

  "background": {
    "service_worker": "background-sw.js"
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "utils.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "sandbox.html",
        "img/*"
      ],
      "matches": [
        "<all_urls>"
      ],
      "use_dynamic_url": true
    }
  ],

  "action": {
    "default_icon": "img/content-farm-marker_48.png",
    "default_title": "__MSG_appName__"
  }
}
